<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/5e31a87df8.js"
      crossorigin="anonymous"
      defer
    ></script>
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="icon" href="/images/fileImg.png" type="image/x-icon">
    <title>Lizzy's Delivery DepotðŸ“¦</title>
  </head>
  <body class="container">
    <div class="form-box">
      <h1 id="title">SignUp</h1>

      <ul>
        <% if(typeof errors != 'undefined'){ %>
          <% errors.forEach(error=>{ %>
              <li> <%= error.message %></li>
      <%  }) %>
      <% } %>  
        
      </ul>

      <form action="/register" method="POST">
        <div class="input-group">
          <div class="input-field" id="nameField">
            <i class="fa-solid fa-user"></i>
            <input type="text" placeholder="Name" id="name" name="name"/>
          </div>
          <div class="input-field">
            <i class="fa-solid fa-envelope"></i>
            <input type="email" placeholder="Email ID" name="email" id="email" required />
          </div>
          <div class="input-field">
            <i class="fa-solid fa-lock"></i>
            <input type="password" placeholder="Password" name="password"  id="password" />
          </div>
          <div class="input-field">
            <i class="fa-solid fa-lock"></i>
            <input type="password" placeholder="Confirm Password" name="password2" id="password2" required />
          </div>
          <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
        <br>
        <br>
        <div class="btn-field">
          <button type="submit" id="signUpBtn">Sign Up</button>
          <!-- <button type="submit" id="signInBtn" class="disable">Sign In</button> -->
        </div>
      </form>
    </div>
  </body>
</html>
